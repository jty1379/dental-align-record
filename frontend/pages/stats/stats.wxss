/* pages/stats/stats.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 周选择器 */
.week-selector {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 24rpx;
}

.week-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.week-btn.disabled {
  opacity: 0.4;
}

.arrow {
  font-size: 36rpx;
  color: #4A90D9;
}

.week-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin: 0 40rpx;
}

/* 图表卡片 */
.chart-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.chart-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 32rpx;
}

.chart-container {
  position: relative;
  height: 300rpx;
}

.bars-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 200rpx;
  padding-bottom: 60rpx;
}

.bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.bar-wrapper {
  width: 40rpx;
  height: 160rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  display: flex;
  align-items: flex-end;
  overflow: hidden;
}

.bar {
  width: 100%;
  background: linear-gradient(180deg, #4A90D9 0%, #357ABD 100%);
  border-radius: 8rpx;
  transition: height 0.3s ease;
  min-height: 4rpx;
}

.bar.completed {
  background: linear-gradient(180deg, #52C41A 0%, #389E0D 100%);
}

.bar-label {
  font-size: 22rpx;
  color: #999999;
  margin-top: 12rpx;
}

.bar-value {
  font-size: 20rpx;
  color: #666666;
  margin-top: 4rpx;
}

.target-line {
  position: absolute;
  top: 40rpx;
  left: 0;
  right: 0;
  border-top: 2rpx dashed #FF6B6B;
}

.target-text {
  position: absolute;
  right: 0;
  top: -30rpx;
  font-size: 20rpx;
  color: #FF6B6B;
}

/* 统计卡片行 */
.stats-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.stat-card {
  flex: 1;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-card.highlight {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
}

.stat-card.highlight .stat-value,
.stat-card.highlight .stat-unit,
.stat-card.highlight .stat-label {
  color: #ffffff;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #333333;
  line-height: 1;
}

.stat-unit {
  font-size: 24rpx;
  color: #666666;
  margin-top: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

/* 成就卡片 */
.achievement-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.achievement-header {
  margin-bottom: 24rpx;
}

.achievement-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.achievement-row {
  display: flex;
  justify-content: space-around;
}

.achievement-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ach-value {
  font-size: 56rpx;
  font-weight: 700;
  color: #4A90D9;
}

.ach-label {
  font-size: 26rpx;
  color: #999999;
  margin-top: 8rpx;
}

/* 建议卡片 */
.suggestion-card {
  background: #FFF8E1;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.suggestion-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.suggestion-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.suggestion-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #F9A825;
}

.suggestion-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.suggestion-item {
  font-size: 28rpx;
  color: #666666;
  padding-left: 20rpx;
  position: relative;
}

.suggestion-item::before {
  content: '•';
  position: absolute;
  left: 0;
  color: #F9A825;
}

/* 分享按钮 */
.share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #4A90D9 0%, #357ABD 100%);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
  padding: 28rpx 0;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
}

.share-btn::after {
  border: none;
}

.share-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}
