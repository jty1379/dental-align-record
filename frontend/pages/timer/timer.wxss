/* pages/timer/timer.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

/* 成就徽章 */
.achievement-badge {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 165, 0, 0.3);
}

.badge-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.badge-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 600;
}

/* 时间显示 */
.time-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.time-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.time-value {
  font-size: 80rpx;
  font-weight: 600;
  color: #333333;
  font-family: 'Helvetica Neue', monospace;
  letter-spacing: 4rpx;
}

.time-target {
  font-size: 26rpx;
  color: #999999;
  margin-top: 12rpx;
}

/* 进度环 */
.progress-wrapper {
  margin-bottom: 60rpx;
}

.progress-ring {
  width: 300rpx;
  height: 300rpx;
  position: relative;
  border-radius: 50%;
}

.progress-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #e8e8e8;
}

.progress-fill {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: conic-gradient(
    #4A90D9 calc(var(--percent) * 3.6deg),
    transparent calc(var(--percent) * 3.6deg)
  );
}

.progress-center {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  right: 20rpx;
  bottom: 20rpx;
  background: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.progress-percent {
  font-size: 48rpx;
  font-weight: 600;
  color: #4A90D9;
}

/* 主按钮 */
.main-button-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.main-button {
  width: 280rpx;
  height: 280rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #4A90D9 0%, #357ABD 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(74, 144, 217, 0.4);
  border: none;
  transition: all 0.3s ease;
}

.main-button::after {
  border: none;
}

.main-button.active {
  background: linear-gradient(135deg, #FF6B6B 0%, #EE5A5A 100%);
  box-shadow: 0 8rpx 30rpx rgba(255, 107, 107, 0.4);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

.button-text {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: 600;
}

.status-text {
  font-size: 26rpx;
  color: #999999;
  margin-top: 24rpx;
}

/* 提示信息 */
.tips {
  background: #FFF8E1;
  padding: 20rpx 32rpx;
  border-radius: 16rpx;
  margin-top: 20rpx;
}

.tips-text {
  font-size: 26rpx;
  color: #F9A825;
}
